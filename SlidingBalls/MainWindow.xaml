<Window x:Class="SlidingBalls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlidingBalls"
        mc:Ignorable="d"
        Background="Black"
        Title="SlidingBalls by Laurent Christen" Height="900" Width="900">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBox Width="100" x:Name="NumberBalls" Text="36" />
            <TextBox Width="100" x:Name="Delay" Text="1000" />
            <TextBox Width="100" x:Name="FillAngle" Text="180" />
            <Button x:Name="ResetButton" Click="ResetButton_Click">Reset</Button>
        </StackPanel>
        <Grid Width="800" Height="800">
            <Ellipse Fill="#FF202020"/>
            <Grid x:Name="Container">
            </Grid>

        </Grid>
    </Grid>
</Window>
